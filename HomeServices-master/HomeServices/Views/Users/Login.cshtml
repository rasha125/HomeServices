@model HomeServices.ViewModels.LoginViewModel

@{

    Layout = "~/Views/_LayoutLogin.cshtml";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">

    <div class="row w-100 justify-content-center">

        <div class="col-12 col-sm-8 col-md-8 col-lg-6 col-xl-4">

            <div class="card shadow-sm border-0">

                <div class="card-body p-4">

                    <h2 class="card-title text-center mb-4 fw-bold text-dark">Login</h2>



                    <form asp-action="Login" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>



                        <div class="mb-3">

                            <label asp-for="Email" class="form-label text-muted">Email</label>

                            <input asp-for="Email" class="form-control form-control-lg border-0 bg-light" placeholder="Enter your email" />

                            <span asp-validation-for="Email" class="text-danger small"></span>

                        </div>



                        <div class="mb-3">

                            <div class="d-flex justify-content-between align-items-center">

                                <label asp-for="Password" class="form-label text-muted">Password</label>

                                <a asp-action="ForgotPassword" class="text-decoration-none small text-muted">Forgot password?</a>

                            </div>

                            <input asp-for="Password" class="form-control form-control-lg border-0 bg-light" placeholder="Enter your password" />

                            <span asp-validation-for="Password" class="text-danger small"></span>

                        </div>



                        <div class="mb-3">

                            <div class="form-check">

                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />

                                <label asp-for="RememberMe" class="form-check-label text-muted small">

                                    Remember me

                                </label>

                            </div>

                        </div>



                        <button type="submit" class="btn btn-dark btn-lg w-100 mb-3 fw-semibold">

                            Log in

                        </button>



                        <div class="text-center">

                            <span class="text-muted small">or</span>

                        </div>



                        <div class="text-center mt-3">

                            <a asp-action="Register" class="btn btn-outline-secondary btn-lg w-100">

                                Register

                            </a>

                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script>

            // Add focus states and smooth animations

            document.addEventListener('DOMContentLoaded', function() {

                const inputs = document.querySelectorAll('.form-control');



                inputs.forEach(input => {

                    input.addEventListener('focus', function() {

                        this.style.boxShadow = '0 0 0 0.2rem rgba(0, 0, 0, 0.1)';

                        this.style.borderColor = '#6c757d';

                    });



                    input.addEventListener('blur', function() {

                        this.style.boxShadow = '';

                        this.style.borderColor = '';

                    });

                });

            });

        </script>
    }



}