@{
    Layout = null;
    ViewData["Title"] = "Home Services - Your Trusted Connection";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Services - Your Trusted Connection</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/home.css" />

</head>
<body>
    <section class="hero-section" style="padding-top: 56px;">
        <div class="container">
            <h1 class="display-3 fw-bold">Find Trusted Professionals For Any Job</h1>
            <p class="lead mt-3 mb-4 col-md-8 mx-auto">From home repairs to personal tutoring, connect with skilled experts in your community, ready to help.</p>
            <a asp-controller="Users" asp-action="Login" class="btn btn-primary btn-lg px-4 gap-3">Login</a>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <h2 class="text-center section-title">How It Works</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="bi bi-file-earmark-text feature-icon mb-3"></i>
                        <h5 class="fw-bold">1. Request a service easily</h5>
                        <p>Specify the type of service you need, such as cleaning, maintenance, or electrical. It's quick and free..</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="bi bi-people feature-icon mb-3"></i>
                        <h5 class="fw-bold">2. Choose the right service provider</h5>
                        <p>Browse offers from certified service providers and compare ratings and prices.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="bi bi-check2-circle feature-icon mb-3"></i>
                        <h5 class="fw-bold">3. Receive your service with ease</h5>
                        <p>Book the service and follow up until it's completed professionally and to your complete satisfaction.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section about-us">
        <div class="container">
            <div class="row align-items-center g-5">
                <div class="col-lg-6">
                    <img src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?q=80&w=1932&auto=format&fit=crop" class="img-fluid rounded-3 shadow-lg" alt="Our Team">
                </div>
                <div class="col-lg-6">
                    <h2 class="section-title text-center">About Us</h2>
                    <h3 class="fw-bold">Your Go-To Platform for Home Services</h3>
                    <p class="text-muted mt-3">
                        Our mission is to simplify the process of finding trusted home service providers. Whether you need cleaning, electrical work, plumbing, or other services — we've got you covered.
                        We connect clients with skilled local professionals quickly, safely, and efficiently.
                    </p>
                    <ul class="list-unstyled mt-4">
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Verified providers to ensure quality and reliability.</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Empowering local talent and supporting small businesses.</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-primary me-2"></i> Safe, easy-to-use platform for clients and providers alike.</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>



    <section class="section">
        <div class="container">
            <h2 class="text-center section-title">Popular Services</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="bi bi-house-heart feature-icon mb-3"></i>
                        <h6 class="fw-bold fs-5">Cleaning</h6>
                        <p class="text-muted">Find trusted professionals for home and office cleaning tasks.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="bi bi-tools feature-icon mb-3"></i>
                        <h6 class="fw-bold fs-5">Handyman</h6>
                        <p class="text-muted">Get help with repairs, installations, and general maintenance.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="bi bi-book feature-icon mb-3"></i>
                        <h6 class="fw-bold fs-5">Tutoring</h6>
                        <p class="text-muted">Connect with qualified tutors for all school and university subjects.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section about-us">
        <div class="container">
            <h2 class="text-center section-title">Your Peace of Mind is Our Priority</h2>
            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="bi bi-person-vcard feature-icon mb-3"></i>
                        <h5 class="fw-bold">Verified Professionals</h5>
                        <p>We carefully screen every service provider to ensure skill, reliability, and trustworthiness.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="bi bi-star-half feature-icon mb-3"></i>
                        <h5 class="fw-bold">Real Reviews & Ratings</h5>
                        <p>Read honest feedback from previous clients to choose the right professional with confidence.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="bi bi-headset feature-icon mb-3"></i>
                        <h5 class="fw-bold">Always Here for You</h5>
                        <p>Our support team is available around the clock to answer your questions and resolve issues.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    >

    <section class="team-section-creative">
        <div class="background-blobs">
            <div class="blob1"></div>
            <div class="blob2"></div>
        </div>
        <div class="container" style="position: relative; z-index: 2;">
            <h2 class="text-center section-title text-white">Meet Our Creative Team</h2>
            <p class="lead text-center text-white-50 mb-5 col-md-8 mx-auto">We are a small team of passionate developers dedicated to creating a seamless and trustworthy experience for you.</p>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <div class="col">
                    <div class="glass-card">
                        <h5 class="dev-name">Ghaid Hamdan</h5>
                        <p class="dev-title">Full Stack Developer</p>
                        <p class="dev-description">Skilled in .NET, SQL Server, and modern frontend frameworks. Focused on building secure, scalable, and efficient web applications..</p>
                        <div class="linkedin-icon"><a href="#" title="LinkedIn Profile"><i class="bi bi-linkedin"></i></a></div>
                    </div>
                </div>
                <div class="col">
                    <div class="glass-card">
                        <h5 class="dev-name">Rasha Noman</h5>
                        <p class="dev-title">Full Stack Developer</p>
                        <p class="dev-description">Skilled in .NET, SQL Server, and modern frontend frameworks. Focused on building secure, scalable, and efficient web applications..</p>
                        <div class="linkedin-icon"><a href="#" title="LinkedIn Profile"><i class="bi bi-linkedin"></i></a></div>
                    </div>
                </div>
                <div class="col">
                    <div class="glass-card">
                        <h5 class="dev-name">Bashar Alquos</h5>
                        <p class="dev-title">Full Stack Developer</p>
                        <p class="dev-description">Skilled in .NET, SQL Server, and modern frontend frameworks. Focused on building secure, scalable, and efficient web applications..</p>
                        <div class="linkedin-icon"><a href="#" title="LinkedIn Profile"><i class="bi bi-linkedin"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Final Call to Action (Compact Design) -->
    <section class="final-cta-creative">
        <div class="container">
            <h2 class="fw-bold">Ready to Get Started?</h2>
            <p class="lead mt-3 mb-4">Join our community today to find help or offer your skills.</p>
            <div>
                <!-- الأزرار الآن بحجمها الطبيعي -->
                <a asp-controller="Users" asp-action="Register" class="btn btn-light px-4 m-2">Sign Up Now</a>
                <a asp-controller="Users" asp-action="Login" class="btn btn-outline-light px-4 m-2">Login</a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="container">
            © @DateTime.Now.Year Home Services - All Rights Reserved.
        </div>
    </footer>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>