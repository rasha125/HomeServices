@model IEnumerable<HomeServices.Models.Issues>
@{
    ViewData["Title"] = "Report Issues";
}

<h2 class="mb-4">Report Issues</h2>

<input id="myInput" type="text" class="form-control mb-3 w-50" placeholder="Search by name or type..." />

<table class="table table-bordered table-striped" id="myTable">
    <thead class="table-dark">
        <tr>
            <th>User</th>
            <th>Type</th>
            <th>Description</th>
            <th>File</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.FirstName @item.User.LastName</td>
                <td>@item.Type</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.File))
                    {
                        <a href="~/uploads/@item.File" target="_blank">View</a>
                    }
                    else
                    {
                        <span>No file</span>
                    }
                </td>
                <td>@item.Status</td>
                <td>@item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td class="d-flex gap-2">
                    @if (item.Status != HomeServices.Enums.ReportStatus.Closed)
                    {
                        <form asp-action="ChangeStatus" asp-route-id="@item.IssuesId" method="post">
                            <button type="submit" class="btn btn-sm btn-warning">Close</button>
                        </form>
                    }

                    
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });
    });
</script>
