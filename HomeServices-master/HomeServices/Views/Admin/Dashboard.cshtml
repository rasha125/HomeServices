@* 
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/_Layout.cshtml";
} 
*@

<div class="container mt-4" style="max-width: 600px;">
    <h2 class="mb-4 text-center">مرحبًا، Admin</h2>

    <h3 class="mb-3 text-secondary text-center">System Stats</h3>

    <ul class="list-group shadow-sm">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Total Users</span>
            <span class="badge bg-primary rounded-pill">@ViewBag.UserCount</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Total Persons</span>
            <span class="badge bg-primary rounded-pill">@ViewBag.PersonCount</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Total Providers</span>
            <span class="badge bg-primary rounded-pill">@ViewBag.ProviderCount</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Total Orders</span>
            <span class="badge bg-primary rounded-pill">@ViewBag.orderCount</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>Total Issues</span>
            <span class="badge bg-primary rounded-pill">@ViewBag.issueCount</span>
        </li>
    </ul>
</div>
