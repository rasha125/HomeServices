@using HomeServices.Models
@model List<Services>

@{
    ViewData["Title"] = "Services";
}


<input type="text" id="serviceSearch" class="form-control" placeholder="Search services..." />

<div class="row mt-4" id="servicesContainer">
    @foreach (var service in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4 service-card">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title service-name">@service.ServiceName</h5>
                    <p class="card-text">Description</p>  <!--There's No Description data-->
                    <a asp-controller="Service"
                       asp-action="Providers"
                       asp-route-serviceId="@service.ServicesId"
                       class="btn btn-secondary w-100">
                        Providers
                    </a>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script>
        document.getElementById("serviceSearch").addEventListener("input", function () {
            const query = this.value.toLowerCase();
            const cards = document.querySelectorAll(".service-card");

            cards.forEach(card => {
                const serviceName = card.querySelector(".service-name").innerText.toLowerCase();
                if (serviceName.includes(query)) {
                    card.style.display = "block";
                } else {
                    card.style.display = "none";
                }
            });
        });
    </script>
}
