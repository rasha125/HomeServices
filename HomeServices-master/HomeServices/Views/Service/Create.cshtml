@model HomeServices.Models.Services

@{
    ViewData["Title"] = "Create";

}
<div>
    <a asp-action="IndexServices" asp-controller="Service" class="btn btn-outline-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>


<h4>Add Services</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
